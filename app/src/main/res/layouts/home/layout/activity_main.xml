<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_home_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".view.home.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_home"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_1"
            android:background="@color/colorBG"
            app:layout_constraintBottom_toTopOf="@id/ll_home_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/ll_home_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/space_5"
            android:paddingBottom="@dimen/space_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_home_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_bottom_home"
                android:tint="@color/xml_gray_transperent" />

            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_bottom_search"
                android:tint="@color/xml_gray_transperent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_bottom_category"
                android:tint="@color/xml_gray_transperent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_home_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_home_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/space_5"
                    android:minWidth="30dp"
                    android:minHeight="30dp"
                    android:src="@drawable/ic_bottom_cart"
                    android:tint="@color/xml_gray_transperent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <CustomViews.PriceView
                    android:id="@+id/tv_home_cart_main_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xml_rounded_orange"
                    android:gravity="center"
                    android:paddingStart="@dimen/space_5"
                    android:paddingEnd="@dimen/space_5"
                    android:text="1.3"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_10"
                    app:dotMargin="-2dp"
                    app:layout_constraintEnd_toEndOf="@id/iv_home_cart"
                    app:layout_constraintStart_toEndOf="@id/iv_home_cart"
                    app:layout_constraintTop_toTopOf="parent"
                    app:priceFontFamily="regular"
                    app:priceSize="@dimen/text_10"
                    app:priceSize2="8sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_home_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/user_account"
                android:src="@drawable/ic_bottom_user"
                android:tint="@color/xml_gray_transperent" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:translationY="15dp"
            app:cardCornerRadius="40dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/iv_home_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/search"
                android:padding="@dimen/space_10"
                android:src="@drawable/ic_bottom_category"
                android:tint="@color/xml_gray_transperent" />

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/include_home_combo"
        layout="@layout/dialog_combooffer" />

</FrameLayout>