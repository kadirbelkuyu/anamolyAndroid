<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/space_5"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/ll_featured_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CustomViews.TextViewBold
                android:id="@+id/tv_featured_category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:paddingStart="@dimen/space_20"
                android:paddingEnd="@dimen/space_20"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>