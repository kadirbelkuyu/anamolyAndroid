<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/space_10"
    android:paddingBottom="@dimen/space_10">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_product"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/space_5"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_product_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/space_15"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginEnd="@dimen/space_15"
                android:layout_marginBottom="@dimen/space_5"
                android:src="@drawable/ic_logo_bg"
                android:transitionName="product_detail"
                app:layout_constraintBottom_toTopOf="@id/tv_product_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/iv_product_add"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/space_3"
                    android:layout_marginTop="@dimen/space_3"
                    android:layout_marginEnd="@dimen/space_3"
                    android:layout_marginBottom="@dimen/space_3"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/space_5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/space_5"
                        android:src="@drawable/ic_add"
                        app:tint="@color/colorPrimary"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

                <CustomViews.TextViewMedium
                    android:id="@+id/tv_product_qty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_5"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="@dimen/space_5"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingTop="@dimen/space_5"
                    android:paddingBottom="@dimen/space_5"
                    android:text="0"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/pb_product_qty_load"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/space_5"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="@dimen/space_5"
                    android:background="@color/colorPrimary"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorOrange"
                    android:padding="5dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/iv_product_minus"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/space_3"
                    android:layout_marginEnd="@dimen/space_3"
                    android:layout_marginBottom="@dimen/space_3"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/space_5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/space_5"
                        android:src="@drawable/ic_remove"
                        app:tint="@color/colorPrimary"
                        tools:ignore="ContentDescription" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <CustomViews.TextViewMedium
                android:id="@+id/tv_product_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="@drawable/xml_discount_bg"
                android:gravity="center"
                android:paddingStart="@dimen/space_5"
                android:paddingTop="@dimen/space_2"
                android:paddingEnd="@dimen/space_5"
                android:paddingBottom="@dimen/space_2"
                android:text="10% Discount"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_12"
                app:layout_constraintBottom_toBottomOf="@id/iv_product_img"
                app:layout_constraintEnd_toEndOf="parent" />

            <CustomViews.TextViewMedium
                android:id="@+id/tv_product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginEnd="@dimen/space_10"
                android:gravity="start"
                android:text="Den Eelder geitenmelk"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_18"
                app:layout_constraintBottom_toTopOf="@id/tv_product_unit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <CustomViews.TextViewRegular
                android:id="@+id/tv_product_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginEnd="@dimen/space_10"
                android:gravity="start"
                android:text="750 Ml"
                android:textAlignment="viewStart"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/text_14"
                app:layout_constraintBottom_toTopOf="@id/line2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_product_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_5"
                android:background="@drawable/xml_view_gray2"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ProgressBar
                    android:id="@+id/pb_product_counter_load"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorOrange"
                    android:padding="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CustomViews.TextViewMedium
                    android:id="@+id/tv_product_counter"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:autoSizeMaxTextSize="14sp"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/xml_view_gray2"
                    android:gravity="center"
                    android:maxLength="3"
                    android:paddingStart="@dimen/space_2"
                    android:paddingEnd="@dimen/space_2"
                    android:textColor="@color/colorWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/iv_product_express"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_3"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_express"
                app:layout_constraintBottom_toBottomOf="@id/line2"
                app:layout_constraintEnd_toStartOf="@id/ll_product_price_main"
                app:layout_constraintTop_toTopOf="@id/line2"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/ll_product_price_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5"
                android:layout_marginEnd="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_10"
                android:gravity="start"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/line2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <CustomViews.PriceView
                        android:id="@+id/tv_product_price_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/colorTextHint"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:priceFontFamily="regular"
                        app:priceSize="@dimen/text_16"
                        app:priceSize2="@dimen/text_10" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/colorTextHint"
                        android:rotation="-30"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="-3dp"
                    android:background="@drawable/xml_view_gray" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5"
                android:layout_marginEnd="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"
                android:gravity="start"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <CustomViews.PriceView
                    android:id="@+id/tv_product_price_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:priceFontFamily="medium"
                    app:priceSize="@dimen/text_20"
                    app:priceSize2="@dimen/text_14" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="-3dp"
                    android:background="@drawable/xml_view_purple"
                    app:layout_constraintStart_toStartOf="@id/tv_product_price_discount"
                    app:layout_constraintTop_toBottomOf="@id/tv_product_price_discount" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>