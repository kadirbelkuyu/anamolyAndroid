<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.register.RegisterActivity">

    <ImageView
        android:id="@+id/iv_register_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_logo_login"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_30">

                <CustomViews.EditTextRegular
                    android:id="@+id/et_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="@dimen/space_10"
                    android:ems="10"
                    android:gravity="bottom|start"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

                <CustomViews.EditTextRegular
                    android:id="@+id/et_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_password"
                    android:drawableEnd="@drawable/ic_eye_hide"
                    android:drawablePadding="@dimen/space_10"
                    android:ems="10"
                    android:gravity="bottom|start"
                    android:hint="@string/enter_password"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

                <CustomViews.EditTextRegular
                    android:id="@+id/et_register_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="@dimen/space_10"
                    android:ems="10"
                    android:gravity="bottom|start"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:nextFocusDown="@id/et_register_first_name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CustomViews.EditTextRegular
                        android:id="@+id/et_register_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_user"
                        android:drawablePadding="@dimen/space_10"
                        android:ems="10"
                        android:gravity="bottom"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:nextFocusDown="@id/et_register_last_name"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorTextHint" />

                    <CustomViews.EditTextRegular
                        android:id="@+id/et_register_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_3"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="bottom|start"
                        android:hint="@string/last_name"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:nextFocusDown="@id/et_register_post_code"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorTextHint" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <CustomViews.EditTextRegular
                        android:id="@+id/et_register_post_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_post_code"
                        android:drawablePadding="@dimen/space_10"
                        android:ems="6"
                        android:gravity="bottom|start"
                        android:hint="@string/postal_code"
                        android:inputType="number"
                        android:maxLength="5"
                        android:nextFocusDown="@id/et_register_house_no"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorTextHint" />

                    <CustomViews.EditTextRegular
                        android:id="@+id/et_register_house_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_3"
                        android:layout_weight="1"
                        android:gravity="bottom|start"
                        android:hint="@string/house_no"
                        android:inputType="number"
                        android:maxLength="30"
                        android:nextFocusDown="@id/et_register_adon_no"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorTextHint" />

                    <CustomViews.EditTextRegular
                        android:id="@+id/et_register_adon_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_3"
                        android:layout_weight="1"
                        android:gravity="bottom|start"
                        android:hint="@string/adon_no"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:nextFocusDown="@id/et_register_company_name"
                        android:textAlignment="viewStart"
                        android:textColor="@color/colorText"
                        android:textColorHint="@color/colorTextHint" />

                </LinearLayout>

                <CustomViews.CheckBoxRegular
                    android:id="@+id/chk_register_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5"
                    android:button="@drawable/xml_checkbox"
                    android:gravity="center_vertical|start"
                    android:paddingStart="@dimen/space_10"
                    android:text="@string/i_am_a_company"
                    android:textAlignment="viewStart" />

                <CustomViews.EditTextRegular
                    android:id="@+id/et_register_company_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_company"
                    android:drawablePadding="@dimen/space_10"
                    android:ems="10"
                    android:gravity="bottom|start"
                    android:hint="@string/company_name"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

                <CustomViews.EditTextRegular
                    android:id="@+id/et_register_company_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_card"
                    android:drawablePadding="@dimen/space_10"
                    android:ems="10"
                    android:gravity="bottom|start"
                    android:hint="@string/company_id_number"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

                <CustomViews.ButtonMedium
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:background="@drawable/xml_view_purple"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_18"
                    app:cornerRadius="@dimen/space_5" />

                <TextView
                    android:id="@+id/tv_register_privacy_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/space_5"
                    android:drawableStart="@drawable/ic_info_orange"
                    android:drawablePadding="@dimen/space_10"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/space_5"
                    android:paddingBottom="@dimen/space_5"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/colorOrange" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>