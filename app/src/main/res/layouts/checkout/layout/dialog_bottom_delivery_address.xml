<?xml version="1.0" encoding="utf-8"?>
<CustomViews.shadow.ShadowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:cornerRadiusTL="@dimen/space_8"
    app:cornerRadiusTR="@dimen/space_8">

    <LinearLayout
        android:id="@+id/ll_delivery_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_30"
        android:paddingLeft="@dimen/space_30"
        android:paddingEnd="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        android:paddingBottom="@dimen/space_20">

        <View
            android:id="@+id/view_dash"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:background="@drawable/xml_rounded_orange" />

        <CustomViews.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/delivery_address"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_5"
                android:layout_weight="1"
                android:hint="@string/postal_code">

                <CustomViews.EditTextRegular
                    android:id="@+id/et_delivery_address_pine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:gravity="start"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="5"
                    android:nextFocusDown="@id/et_delivery_address_house_no"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5"
                android:layout_marginEnd="@dimen/space_5"
                android:layout_weight="1">

                <CustomViews.EditTextRegular
                    android:id="@+id/et_delivery_address_house_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="@string/house_no"
                    android:inputType="number"
                    android:maxLength="30"
                    android:nextFocusDown="@id/et_delivery_address_house_ad_no"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_5"
                android:layout_weight="1">

                <CustomViews.EditTextRegular
                    android:id="@+id/et_delivery_address_house_ad_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="@string/house_ad_on"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:textAlignment="viewStart"
                    android:textColor="@color/colorText"
                    android:textColorHint="@color/colorTextHint" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CustomViews.EditTextRegular
                android:id="@+id/et_delivery_address_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/City"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextHint" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CustomViews.EditTextRegular
                android:id="@+id/et_delivery_address_street"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/street"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextHint" />

        </com.google.android.material.textfield.TextInputLayout>

        <CustomViews.ButtonMedium
            android:id="@+id/btn_delivery_address_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_30"
            android:background="@drawable/xml_view_purple"
            android:gravity="center"
            android:text="@string/change_address"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_18"
            app:cornerRadius="@dimen/space_5" />

    </LinearLayout>

</CustomViews.shadow.ShadowView>