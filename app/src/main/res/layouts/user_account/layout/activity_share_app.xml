<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.user_account.ShareAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="@dimen/space_10">

        <LinearLayout
            android:id="@+id/ll_share_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/xml_view_purple_light"
            android:orientation="vertical"
            android:padding="@dimen/space_15">

            <CustomViews.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/share_app_with_your_fiends"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_20" />

            <CustomViews.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/here_each_user_can_share_this_app_by_facebook_whatsapp_or_email_and_can_receive_discount_code_if_fiends_will_register_both_friend_s_and_the_user_will_receive_this_discount_code"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:orientation="vertical"
            android:paddingStart="@dimen/space_20"
            android:paddingEnd="@dimen/space_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/xml_border_gray2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/space_2"
                    android:layout_marginBottom="@dimen/space_2"
                    android:background="@drawable/xml_border_gray3">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/space_15"
                        android:layout_marginEnd="25dp"
                        android:layout_marginBottom="@dimen/space_15"
                        android:background="@drawable/xml_circle_half"
                        android:translationX="-2dp" />

                    <CustomViews.TextViewRegular
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical|end"
                        android:autoSizeMaxTextSize="@dimen/text_14"
                        android:autoSizeMinTextSize="@dimen/text_8"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:maxLines="1"
                        android:paddingTop="26dp"
                        android:rotation="270"
                        android:text="@string/coupon"
                        android:textAllCaps="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14"
                        android:translationX="15dp" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_10"
                    android:background="@drawable/xml_border_gray4"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/space_20">

                    <CustomViews.TextViewBold
                        android:id="@+id/tv_share_coupon_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="xoodd"
                        android:textAllCaps="true"
                        android:textColor="@color/colorText"
                        android:textSize="22sp" />

                    <CustomViews.TextViewRegular
                        android:id="@+id/tv_share_coupon_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/discount"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/text_18" />

                    <ProgressBar
                        android:id="@+id/pb_share_coupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <CustomViews.TextViewRegular
                android:id="@+id/tv_share_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/xml_view_blue"
                android:drawableStart="@drawable/ic_facebook"
                android:drawablePadding="@dimen/space_10"
                android:gravity="center_vertical|start"
                android:padding="@dimen/space_8"
                android:text="@string/facebook"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16" />

            <CustomViews.TextViewRegular
                android:id="@+id/tv_share_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/xml_view_green"
                android:drawableStart="@drawable/ic_whatsapp_white"
                android:drawablePadding="@dimen/space_10"
                android:gravity="center_vertical|start"
                android:padding="@dimen/space_8"
                android:text="@string/whatsapp"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16" />

            <CustomViews.TextViewRegular
                android:id="@+id/tv_share_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/xml_view_orange"
                android:drawableStart="@drawable/ic_email_white"
                android:drawablePadding="@dimen/space_10"
                android:gravity="center_vertical|start"
                android:padding="@dimen/space_8"
                android:text="@string/email"
                android:textAlignment="viewStart"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16"
                app:allowBG="true"
                app:cornerRadius="@dimen/space_5" />

            <CustomViews.TextViewRegular
                android:id="@+id/tv_share_tnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:gravity="start"
                android:text="@string/terms_and_conditions_apply"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>