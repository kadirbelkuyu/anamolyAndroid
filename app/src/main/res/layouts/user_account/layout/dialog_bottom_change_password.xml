<?xml version="1.0" encoding="utf-8"?>
<CustomViews.shadow.ShadowView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:cornerRadiusTL="@dimen/space_8"
    app:cornerRadiusTR="@dimen/space_8">

    <LinearLayout
        android:id="@+id/ll_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBG"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_30"
        android:paddingLeft="@dimen/space_30"
        android:paddingEnd="@dimen/space_30"
        android:paddingRight="@dimen/space_30"
        android:paddingBottom="@dimen/space_20">

        <View
            android:id="@+id/view_dash"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_3"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:background="@drawable/xml_rounded_orange" />

        <CustomViews.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/current_password"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_20" />

        <CustomViews.EditTextRegular
            android:id="@+id/et_change_password_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_eye_hide"
            android:ems="10"
            android:gravity="start"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextHint"
            android:textColorHint="@color/colorTextHint" />

        <CustomViews.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="start"
            android:text="@string/new_password"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_20" />

        <CustomViews.EditTextRegular
            android:id="@+id/et_change_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_eye_hide"
            android:ems="10"
            android:gravity="start"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextHint"
            android:textColorHint="@color/colorTextHint" />

        <CustomViews.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:gravity="start"
            android:text="@string/confirm_new_password"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_20" />

        <CustomViews.EditTextRegular
            android:id="@+id/et_change_password_re_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_eye_hide"
            android:ems="10"
            android:gravity="start"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextHint"
            android:textColorHint="@color/colorTextHint" />

        <CustomViews.ButtonMedium
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_10"
            android:background="@drawable/xml_view_purple"
            android:gravity="center"
            android:text="@string/send"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_18"
            app:cornerRadius="@dimen/space_5" />

    </LinearLayout>

</CustomViews.shadow.ShadowView>