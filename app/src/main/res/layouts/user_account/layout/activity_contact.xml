<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.user_account.ContactActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBG"
        android:orientation="vertical"
        android:padding="@dimen/space_20">

        <CustomViews.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/how_many_i_help_you"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_20" />

        <CustomViews.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/feel_free_to_contact_us_if_need_any_help_of_support"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/text_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:background="@drawable/xml_border_gray"
            android:orientation="vertical"
            android:padding="@dimen/space_20">

            <EditText
                android:id="@+id/et_contact_us_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|center"
                android:hint="@string/full_name"
                android:inputType="textPersonName"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextHint" />

            <EditText
                android:id="@+id/et_contact_us_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|center"
                android:hint="@string/phone_no"
                android:inputType="number"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextHint" />

            <EditText
                android:id="@+id/et_contact_us_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|center"
                android:hint="@string/write_your_message_here"
                android:inputType="textMultiLine"
                android:textAlignment="viewStart"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorTextHint" />

            <CustomViews.ButtonMedium
                android:id="@+id/btn_contact_us_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/xml_view_purple"
                android:gravity="center"
                android:text="@string/send"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_18"
                app:cornerRadius="@dimen/space_5" />

        </LinearLayout>

        <CustomViews.TextViewRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_5"
            android:text="@string/quick_contact"
            android:textColor="@color/colorText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_contact_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_call"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/iv_contact_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:src="@mipmap/ic_email"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/iv_contact_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_8"
                android:src="@mipmap/ic_whatsapp"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>