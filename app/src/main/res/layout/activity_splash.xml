<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".view.splash.SplashActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/space_10"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_logo" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/colorBG">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="95dp"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/tv_splash_cloud1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_splash_cloud" />

            <ImageView
                android:id="@+id/tv_splash_cloud2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_splash_cloud" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_50"
            android:layout_marginBottom="@dimen/space_10"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/tv_splash_building1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_splash_building" />

            <ImageView
                android:id="@+id/tv_splash_building2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_splash_building" />

        </FrameLayout>

        <ImageView
            android:id="@+id/tv_splash_cycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_splash_cycle" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBG"
        android:orientation="vertical"
        android:paddingStart="@dimen/space_50"
        android:paddingTop="@dimen/space_30"
        android:paddingEnd="@dimen/space_50"
        android:paddingBottom="@dimen/space_30">

        <CustomViews.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/ordered_from_us"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp" />

        <CustomViews.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:text="@string/delivered_to_your_home"
            android:textAlignment="viewStart"
            android:textColor="@color/colorOrange"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_splash_1"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:background="@drawable/xml_circle_orange" />

            <CustomViews.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:gravity="start"
                android:text="@string/vegetables_fruit"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_splash_2"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:background="@drawable/xml_circle_orange" />

            <CustomViews.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:gravity="start"
                android:text="@string/food_stuffs"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_splash_3"
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:background="@drawable/xml_circle_orange" />

            <CustomViews.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:gravity="start"
                android:text="@string/meat_poultry"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_30"
            android:indeterminate="true" />

    </LinearLayout>

</LinearLayout>